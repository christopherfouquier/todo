{% extends "base.html.twig" %}

{% block body %}
    {% if error is defined and not error is empty %}
        <div class="alert alert-danger">
            <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">Ã—</span><span class="sr-only">Close</span></button>
            {% if error == "Bad credentials" %}Identifiant incorrect !{% endif %}
        </div>
    {% endif %}
    <div class="row">
        <div class="col-xs-6 col-md-6">
            <h2>Connexion</h2>
            <form action="{{ path('login_check') }}" method="post">
                <div class="form-group">
                    <label for="login">Identifiant</label>
                    <input type="text" id="login" class="form-control" placeholder="Identifiant" name="_username" value="{% if last_username is defined %}{{ last_username }}{% endif %}">
                </div>
                <div class="form-group">
                    <label for="password">Mot de passe</label>
                    <input type="password" id="password" class="form-control" placeholder="Mot de passe" name="_password" value="">
                </div>
                <div class="control-group">
                    <div class="controls">
                        <button type="submit" class="btn btn-primary">Connexion</button>
                    </div>
                </div>
            </form>
        </div>

        {# Register members #}
        <div class="col-xs-6 col-md-6">
            <h2>Inscription</h2>
            <form action="{{ path('homepage') }}" method="post" novalidate="novalidate">
                {% if form_errors(form) %}
                    <div class="alert alert-danger">
                        {{ form_errors(form) }}
                    </div>
                {% endif %}

                <div class="form-group">
                    <label>{{ form_label(form.username) }}</label>
                    {{ form_widget(form.username) }}
                </div>
                {% if form_errors(form.username) %}
                    <div class="form-group">
                        <div class="alert alert-danger">
                            {{ form_errors(form.username) }}
                        </div>
                    </div>
                {% endif %}

                <div class="form-group">
                    <label>{{ form_label(form.email) }}</label>
                    {{ form_widget(form.email) }}
                </div>
                {% if form_errors(form.email) %}
                    <div class="form-group">
                        <div class="alert alert-danger">
                            {{ form_errors(form.email) }}
                        </div>
                    </div>
                {% endif %}

                <div class="form-group">
                    <label>{{ form_label(form.password.first) }}</label>
                    {{ form_widget(form.password.first) }}
                </div>
                {% if form_errors(form.password.first) %}
                    <div class="form-group">
                        <div class="alert alert-danger">
                            {{ form_errors(form.password.first) }}
                        </div>
                    </div>
                {% endif %}

                <div class="form-group">
                    <label>{{ form_label(form.password.second) }}</label>
                    {{ form_widget(form.password.second) }}
                </div>
                {% if form_errors(form.password.second) %}
                    <div class="form-group">
                        <div class="alert alert-danger">
                            {{ form_errors(form.password.second) }}
                        </div>
                    </div>
                {% endif %}

                <div class="control-group">
                    <div class="controls">
                        <button type="submit" class="btn btn-primary">Inscription</button>
                    </div>
                </div>

                {{ form_rest(form) }}
            </form>
        </div>
    </div>
{% endblock %}